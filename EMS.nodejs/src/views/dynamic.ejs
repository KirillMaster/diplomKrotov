<!doctype html>
<html lang="en">
<head>
    <title>Explore anthropogenic phenomena!</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="../css/simplePagination.css"/>
    <script src="../js/jquery-3.2.1.min.js"></script>
    <script src="../js/jquery-ui.js"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
    <script src="../js/jquery.simplePagination.js" type="text/javascript"></script>
    <style>
        #map {
            width: 100%;
            height: 700px;
            padding: 0;
            margin: 0;
        }
    </style>

    <script>

        const requestId = "<%= requestId %>";
        let elementDiv = $('<div/>', {
            class: 'col-lg-5',
        });

        $.ajax({
            type: 'GET',
            url: `/research/${requestId}/details`,

            success: function (data) {
                $('.content').empty();
                if (data.code === 200) {

                    if (data.data.phenomenonResultFolder) {
                        const phenomenonName = `${data.data.phenomenonResultFolder.split('external\\')[1]}\\visible_dynamic.png`;
                        elementDiv.append(`<figure class="sign"><p><img src="../${phenomenonName}" alt="Lights" width="1000" height="1000"></p><figcaption>Динамика распространения явления</figcaption></figure>`);
                        $('.content').append(elementDiv);
                    }
                }
                else {
                    alert('Ошибка авторизации');
                }
            },
            error: function (err) {
                console.log(err)
                alert('Ошибка получения информации по иследованию');
            }
        });


    </script>

</head>
<body>
<% include partials/headerNavigation.ejs %>

<div class="container-fluid">
    <h1> Мои исследования</h1>
</div>

<div class="col-md-8">
    <div class="card mb-4 box-shadow">
        <div class="content">
        </div>
    </div>
</div>


</body>
</html>